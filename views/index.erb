<section id="newslist">
  <% news.each do |item| %>
    <%if item['del'] %>
      <article class="deleted">[noticia borrada]</article>
    <% else %>
      <%= erb :news, :locals => {:news => item} %>
    <% end %>
  <% end %>
</section>

