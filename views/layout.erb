<body>

  <div id="container">
    <header class="header">
      <h1 class="logo">Nerds in Press</h1>
      <nav class="menu">
        <a class="link-nav" href="/">top</a>
        <a class="link-nav" href="/latest/0">latest</a>
        <a class="link-nav" href="/submit">submit</a>
        <% if is_logged_in? %>
          <% count = $user['replies'] || 0 %>
          <a class="link-nav" href="/replies">replies <%= count.to_i > 0 ? "<sup>#{count}</sup>" : "" %></a>
        <% end %>
      </nav>
      <nav class="account">
      <% if is_logged_in? %>
        <a class="link-nav" href="/user/<%= urlencode($user['username']) %>"><%= "#{entities($user['username'])} (#{$user['karma']})" %></a>
        <a class="link-nav" href="/logout?apisecret=<%= $user['apisecret'] %>">sign out</a>
      <% else %>
        <a class="link-nav" href="/login">login / register</a>
      <% end %>
      </nav>
    </header>
    <div id="main" role="main">
      <%= yield %>
    </div> <!-- main -->
    <footer class="footer">
      <a class="lnk" href="/rss">rss feed</a>
      &nbsp;~&nbsp;
      <a class="lnk" target="_blank" href="http://github.com/kascote/lamernews">source code</a>
    </footer>
  </div> <!--! end of #container -->


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
