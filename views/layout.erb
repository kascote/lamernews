<body>

  <div id="container">
    <header class="header">
      <h1 class="logo">Nerds in Press</h1>
      <nav class="menu">
        <a class="link-nav" href="/">top</a>
        <a class="link-nav" href="/latest/0">últimas</a>
        <a class="link-nav" href="/submit">enviar</a>
        <% if is_logged_in? %>
          <% count = $user['replies'] || 0 %>
          <a class="link-nav" href="/replies">respuestas <%= count.to_i > 0 ? "<sup>#{count}</sup>" : "" %></a>
        <% end %>
      </nav>
      <nav class="account">
      <% if is_logged_in? %>
        <a class="link-nav" href="/user/<%= urlencode($user['username']) %>"><%= "#{entities($user['username'])} (#{$user['karma']})" %></a>
        <a class="link-nav" href="/logout?apisecret=<%= $user['apisecret'] %>">desconectarse</a>
      <% else %>
        <a class="link-nav" href="/login">conectarse / registrarse</a>
      <% end %>
      </nav>
    </header>
    <div id="main" role="main">
      <%= yield %>
    </div> <!-- main -->
    <footer class="footer">
      <a class="lnk" href="/rss">rss feed</a>
      &nbsp;~&nbsp;
